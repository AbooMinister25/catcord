{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules/**/*"
  ]
}